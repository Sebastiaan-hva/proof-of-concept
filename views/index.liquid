        <img src="https://fdnd-agency.directus.app/assets/{{ item.directus_files_id }}" alt="foto's huis 1" width="500" loading="eager">
      </picture>
    {% endfor %}
  </li>

  <li data-label="hubje 2">
    {% for item in house.gallery limit: 5 %}
