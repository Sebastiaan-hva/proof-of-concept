    {% if liked %}
      <img class="like-button" src="/assets/red-heart-icon.svg" alt="unlike button" height="16">
    {% else %}
      <img class="like-button" src="/assets/heart (1).svg" alt="like button" height="22">
    {% endif %}
  </button>
</form>

